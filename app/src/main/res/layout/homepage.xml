<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".Homepage">



    <TextView
        android:text="Recent Notes"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        />


    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:id="@+id/NotesHistorylayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/RecentNotesTempImageLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="350dp"
                android:src="@drawable/flatbag1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="50dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>







            <ImageButton
                android:id="@+id/AllNotesBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#0000ffff"
                android:scaleType="fitCenter"
                android:src="@drawable/menu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="40dp"

                />








            <ImageButton
                android:id="@+id/CreateNoteBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="#0000ffff"
                android:scaleType="fitStart"
                android:src="@drawable/plus"
                android:text="+"
                android:textSize="40dp"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="40dp"



                />













</androidx.constraintlayout.widget.ConstraintLayout>